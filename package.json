{
  "name": "mcp-tester",
  "version": "1.0.0",
  "description": "Standalone CLI tool for testing Model Context Protocol (MCP) servers",
  "main": "src/cli.ts",
  "bin": {
    "mcp-tester": "src/cli.ts"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:e2e": "jest test/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "type": "module",
  "keywords": [
    "mcp",
    "testing",
    "cli",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ai": "^4.0.0",
    "ajv": "^8.12.0",
    "commander": "^12.0.0",
    "debug": "^4.3.0",
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/debug": "^4.1.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
